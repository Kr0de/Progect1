    <script type="text/javascript">
      $(function(){
        let socket = io.connect(),
         $form = $('#messForm'),
         $textarea = $('#message'),
         $all_mess = $('#all_mess');

         $form.submit(function(event){
           event.preventDefault();
           socket.emit('send mess', $textarea.val());
           $textarea.val('')
         });

         socket.on('add mess', function(data){
           $all_mess.append('<div>' + data.msg + '</div>');
         });
      });
    </script>
